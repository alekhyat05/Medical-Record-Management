@model IEnumerable<ATPatients.Models.MedicationType>

@{
    ViewData["Title"] = "List of Medication Type";
}

    <h1>List of Medication Type</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MedicationTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MedicationTypeId)
            </td>
            <td>
                <a asp-controller="ATMedications" asp-action="Index" asp-route-medicationTypeId="@item.MedicationTypeId" asp-route-medicationName="@item.Name"> @Html.DisplayFor(modelItem => item.Name)</a>
               
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MedicationTypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MedicationTypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MedicationTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
